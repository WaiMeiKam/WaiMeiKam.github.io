{
  "$name": "Kim's World Design Tokens",
  "color": {
    "jade":      { "$value": "#2A9D8F", "$type": "color", "$description": "Primary. Peranakan turquoise tiles. CTAs, links, active states." },
    "rosepink":  { "$value": "#E76F51", "$type": "color", "$description": "Accent. Nyonya textile coral-pink. Highlights, hover, emphasis." },
    "emerald":   { "$value": "#264653", "$type": "color", "$description": "Deep tonal. Dark backgrounds, headers, footer." },
    "gold":      { "$value": "#E9C46A", "$type": "color", "$description": "Warm highlight. Badges, callouts, campfire glow." },
    "cream":     { "$value": "#FFF8F0", "$type": "color", "$description": "Page background. Warm off-white." },
    "charcoal":  { "$value": "#2B2D42", "$type": "color", "$description": "Body text. Dark but not black." },
    "blush":     { "$value": "#FFDDD2", "$type": "color", "$description": "Subtle fill. Card backgrounds, soft sections." }
  },
  "semantic": {
    "primary":    { "$value": "{color.jade}",     "$type": "color", "$description": "Primary action colour" },
    "accent":     { "$value": "{color.rosepink}",  "$type": "color", "$description": "Secondary emphasis" },
    "background": { "$value": "{color.cream}",     "$type": "color", "$description": "Default page background" },
    "surface":    { "$value": "{color.blush}",     "$type": "color", "$description": "Card and section backgrounds" },
    "text":       { "$value": "{color.charcoal}",  "$type": "color", "$description": "Default body text" },
    "heading":    { "$value": "{color.emerald}",   "$type": "color", "$description": "Heading text colour" },
    "glow":       { "$value": "{color.gold}",      "$type": "color", "$description": "Campfire warmth, radial glow" }
  },
  "badUx": {
    "background": { "$value": "#FF00FF", "$type": "color", "$description": "Bad UX mode: neon magenta background" },
    "text":       { "$value": "#00FF00", "$type": "color", "$description": "Bad UX mode: neon green text" },
    "accent":     { "$value": "#FFFF00", "$type": "color", "$description": "Bad UX mode: neon yellow" },
    "primary":    { "$value": "#FF0000", "$type": "color", "$description": "Bad UX mode: aggressive red" }
  },
  "font": {
    "family": {
      "body":    { "$value": "'Inter', sans-serif",     "$type": "fontFamily", "$description": "Body text font" },
      "heading": { "$value": "'Inter', sans-serif",     "$type": "fontFamily", "$description": "Heading font (same as body for now, swap later if desired)" },
      "badUx":   { "$value": "'Comic Sans MS', 'Papyrus', cursive", "$type": "fontFamily", "$description": "Bad UX mode fonts" }
    },
    "size": {
      "xs":   { "$value": "0.75rem",  "$type": "dimension", "$description": "12px — fine print, captions" },
      "sm":   { "$value": "0.875rem", "$type": "dimension", "$description": "14px — secondary text" },
      "base": { "$value": "1rem",     "$type": "dimension", "$description": "16px — body text" },
      "lg":   { "$value": "1.125rem", "$type": "dimension", "$description": "18px — large body" },
      "xl":   { "$value": "1.25rem",  "$type": "dimension", "$description": "20px — small headings" },
      "2xl":  { "$value": "1.5rem",   "$type": "dimension", "$description": "24px — section headings" },
      "3xl":  { "$value": "1.875rem", "$type": "dimension", "$description": "30px — page headings" },
      "4xl":  { "$value": "2.25rem",  "$type": "dimension", "$description": "36px — hero text" },
      "5xl":  { "$value": "3rem",     "$type": "dimension", "$description": "48px — display text" }
    },
    "weight": {
      "normal":   { "$value": "400", "$type": "fontWeight", "$description": "Regular body weight" },
      "medium":   { "$value": "500", "$type": "fontWeight", "$description": "Slightly emphasised" },
      "semibold": { "$value": "600", "$type": "fontWeight", "$description": "Subheadings, labels" },
      "bold":     { "$value": "700", "$type": "fontWeight", "$description": "Headings, strong emphasis" }
    }
  },
  "spacing": {
    "xs":   { "$value": "0.25rem", "$type": "dimension", "$description": "4px" },
    "sm":   { "$value": "0.5rem",  "$type": "dimension", "$description": "8px" },
    "md":   { "$value": "1rem",    "$type": "dimension", "$description": "16px" },
    "lg":   { "$value": "1.5rem",  "$type": "dimension", "$description": "24px" },
    "xl":   { "$value": "2rem",    "$type": "dimension", "$description": "32px" },
    "2xl":  { "$value": "3rem",    "$type": "dimension", "$description": "48px" },
    "3xl":  { "$value": "4rem",    "$type": "dimension", "$description": "64px" }
  },
  "radius": {
    "sm":   { "$value": "0.25rem", "$type": "dimension", "$description": "Subtle rounding" },
    "md":   { "$value": "0.5rem",  "$type": "dimension", "$description": "Default card radius" },
    "lg":   { "$value": "1rem",    "$type": "dimension", "$description": "Prominent rounding" },
    "full": { "$value": "9999px",  "$type": "dimension", "$description": "Pill shape" }
  },
  "shadow": {
    "sm":   { "$value": "0 1px 2px 0 rgba(0,0,0,0.05)",                                      "$type": "shadow", "$description": "Subtle lift" },
    "md":   { "$value": "0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1)",   "$type": "shadow", "$description": "Default card shadow" },
    "lg":   { "$value": "0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1)", "$type": "shadow", "$description": "Elevated elements" },
    "glow": { "$value": "0 0 30px 10px rgba(233,196,106,0.3)",                                "$type": "shadow", "$description": "Campfire glow effect" }
  }
}
